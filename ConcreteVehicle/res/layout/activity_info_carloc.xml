            <!-- android:background="@drawable/one_speed_xml_bg" /> -->
            <!-- </LinearLayout> -->

            <RelativeLayout
                android:id="@+id/tab22__buttom_menu"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_alignParentBottom="true"
                android:background="@drawable/progress_bg1"
                android:gravity="center_horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/tab2_buttom_menu1"
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip" >

                    <ImageView
                        android:id="@+id/start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/start2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2_buttom_menu2"
                    android:layout_width="wrap_content"
                    android:layout_height="50.0dip"
                    android:layout_toRightOf="@id/tab2_buttom_menu1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip" >

                    <ImageView
                        android:id="@+id/post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/post2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2_buttom_menu4"
                    android:layout_width="wrap_content"
                    android:layout_height="50.0dip"
                    android:layout_toRightOf="@id/tab2_buttom_menu2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip" >

                    <ImageView
                        android:id="@+id/stop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stop2" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/RightMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ll_jishi"
            android:orientation="vertical"
            android:paddingRight="3.0dip" >

            <ImageView
                android:id="@+id/iv_map_layer"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:background="@drawable/map_layer" />

            <ImageView
                android:id="@+id/iv_map_lukuang"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@color/bg_item_press"
                android:src="@drawable/map_lukuang_close" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/BlowMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30.0dip"
        android:layout_marginTop="30.0dip"
        android:orientation="vertical"
        android:paddingLeft="3.0dip" >

        <ImageView
            android:id="@+id/iv_mycar_location"
            android:layout_width="40.0dp"
            android:layout_height="40.0dp"
            android:background="@drawable/bg_map_item"
            android:src="@drawable/mycar_loaction"
             />

        <ImageView
            android:id="@+id/my_location"
            android:layout_width="40.0dp"
            android:layout_height="40.0dp"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/bg_map_item"
            android:src="@drawable/my_location" />

        <ImageView
            android:id="@+id/track_play"
            android:layout_width="40.0dp"
            android:layout_height="40.0dp"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/bg_map_item"
            android:src="@drawable/track_play" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_control_bottom"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_zoomout"
                android:layout_width="65.0dip"
                android:layout_height="40.0dip"
                android:background="@drawable/btn_map_zoomout_bg"
                android:paddingTop="3.0dip" />

            <Button
                android:id="@+id/btn_zoomin"
                android:layout_width="65.0dip"
                android:layout_height="40.0dip"
                android:background="@drawable/btn_map_zoomin_bg"
                android:paddingTop="3.0dip" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>