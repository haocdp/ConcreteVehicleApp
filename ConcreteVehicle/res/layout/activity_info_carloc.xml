<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff" >

    <RelativeLayout
        android:id="@+id/tab2_ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/tab2_top_menu"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_alignParentTop="true"
            android:background="@color/main_tab_bg" >

            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4.0dip"
                android:src="@drawable/return_shouye_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="车辆监控"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/CarInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab2_top_menu"
            android:layout_centerHorizontal="true"
            android:autoText="true"
            android:background="#fff4f0f0"
            android:textColor="#ff000000"
            android:visibility="gone" />

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/CarInfo"
            android:clickable="true" />

        <LinearLayout
            android:id="@+id/ll_jishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab2_top_menu"
            android:layout_margin="3.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_shuaxintime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ditu_sxtime"
                android:gravity="center"
                android:padding="5.0dip"
                android:textColor="@color/text_huise1_color"
                android:textSize="13.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ditu_sxtimetext"
                android:gravity="left|center"
                android:padding="5.0dip"
                android:text="@string/mhzdsx"
                android:textColor="@color/text_huise1_color"
                android:textSize="13.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <!-- <LinearLayout -->
