<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_wdwz"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/start"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_planId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RW201401032103451439"
                android:textColor="@color/carinfotextcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="站点一"
                android:textColor="@color/carinfotextcolor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已发区域 :"
                android:textColor="@color/carinfotextcolor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_startpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试区域一"
                android:textColor="#FF0000"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="目标工地"
                android:textColor="@color/carinfotextcolor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_endpiont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="目标工地2"
                android:textColor="#FF0000"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已发车次 :"
                android:textColor="@color/carinfotextcolor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="#FF0000"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="预计(方):"
                android:textColor="@color/carinfotextcolor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_pour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1232"
                android:textColor="#FF0000"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="交付(方):"
                android:textColor="@color/carinfotextcolor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1232"
                android:textColor="#FF0000"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进度:"
                android:textColor="@color/carinfotextcolor"
                android:textSize="13sp" />

            <ProgressBar
                android:id="@+id/pb_schedule"
                android:layout_width="fill_parent"
                android:progress="20"
                android:max="100"
                android:layout_marginLeft="5dp"
                android:layout_height="5dp" 
                android:visibility="visible"
                style="?android:attr/progressBarStyleHorizontal" 
               	android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:background="@drawable/into_icon" />

</RelativeLayout>